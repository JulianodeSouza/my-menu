{
  "cli": {
    "requireCommit": false
  },
  "build": {
    "production": {
      "node": "22.12.0",
      "env": {
        "APP_ENV": "production"
      }
    },
    "preview": {
      "extends": "production",
      "distribution": "internal",
      "env": {
        "APP_ENV": "preview"
      }
    },
    "development": {
      "extends": "production",
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_ENV": "development"
      }
    }
  }
}
